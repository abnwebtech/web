{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

    {#
        the homepage is a special page which displays neither a header nor a footer.
        this is done with the 'trick' of defining empty Twig blocks without any content
    #}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Welcome to the <strong>Symfony Demo Application</strong></h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    Browse the <strong>public section</strong>
                    of the demo application.
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('blog_index') }}">
                        <i class="fa fa-users"></i> Browse application
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    Browse the <strong>admin backend</strong>
                    of the demo application.
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_index') }}">
                        <i class="fa fa-lock"></i> Browse backend
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Display site wide message that last only 1 request -->
    <div class="row">
        <div class="col-12 info">
            {% for flashMessage in app.session.flashbag.get('notice') %}       
                {# <div class="flash-notice">#}
                {{ flashMessage | raw }}  <!-- raw disables autoescaping -->
                {# </div>#}
            {% endfor %}
        </div>
    </div>

        <!-- Test loops -->
    {% for i in 0..5 %}
        <div class="{{ cycle(['success', 'info'], i) }}">
            Test twig loops  {{i}}<!-- some HTML here -->
        </div>
    {% endfor %}


{% endblock %}
